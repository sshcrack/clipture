{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "target": "ES2019",
    "jsx": "react",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@Globals/*": ["src/Globals/*"],
      "@Globals": ["src/Globals"],
      "@processors/*": ["src/processors/*"],
      "@backend/*": ["src/backend/*"],
    },
    "typeRoots": [
      "./src/types",
    ]
  },
  "include": [
    "src/**/*"
  ]
}
